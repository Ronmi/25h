#!/bin/zsh

__ZSH_GIT_BRANCH=
__ZSH_GIT_BRANCHCOUNT=
__ZSH_GIT_CLEAN=

zsh_get_git_branch() {
  local ref cnt
  ref=$(git symbolic-ref HEAD 2> /dev/null)
  cnt=$(git branch 2> /dev/null|grep -c -E '*')
  __ZSH_GIT_BRANCH=$(echo "${ref#refs/heads/}")
  __ZSH_GIT_BRANCHCOUNT=$cnt
}

zsh_get_git_clean() {
  local tmpfile l c1 c2 c3 c4
  tmpfile=$(mktemp)
  git status --porcelain 2> /dev/null > ${tmpfile}
  l=
  grep -E '^.M' ${tmpfile} > /dev/null 2> /dev/null
  if [[ $? -eq 0 ]]
  then
    l="M"
  fi

  grep -E '^\?\?' ${tmpfile} > /dev/null 2> /dev/null
  if [[ $? -eq 0 ]]
  then
    l="U${l}"
  fi

  grep -E '^(.U|U.|AA)' ${tmpfile} > /dev/null 2> /dev/null
  if [[ $? -eq 0 ]]
  then
    l="C${l}"
  fi

  grep -E '^[MADRC] ' ${tmpfile} > /dev/null 2> /dev/null
  if [[ $? -eq 0 ]]
  then
    l="A${l}"
  fi
  __ZSH_GIT_CLEAN=${l}
  rm -f ${tmpfile}
}

add-zsh-hook precmd zsh_get_git_branch
add-zsh-hook precmd zsh_get_git_clean
