if [[ $_RMI_WORK_HERE != "" ]]
then
    source "${_RMI_WORK_HERE}/.work.fizsh"

    function backroot {
        cd "$_RMI_WORK_HERE"
    }
else
    function workhere {
        # search for .work.fizsh
        if [[ ! -f .work.fizsh ]]
        then
            echo "You have to prepare an init file (.work.fizsh) here!"
            return 1
        fi

        export _RMI_WORK_HERE="$(pwd)"
        unset -f workhere
        unset -f workin
        exec fizsh -l
    }

    function workin {
        conf="$1/.work.fizsh"
        if [[ ! -f "$conf" ]]
        then
            echo "You have to prepare an init file (.work.fizsh) here!"
            return 1
        fi

        cd "$1"
        workhere
    }
fi
