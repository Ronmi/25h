ZSH_PROMPT_SWAP_USED=
ZSH_PROMPT_MEMORY_FREE=

function get_swap_used()
{
  local u f p m
  u=$(free -m|grep Swap|awk '{print $3}')
  f=$(free -m|grep Swap|awk '{print $2}')
  ZSH_PROMPT_MEMORY_FREE=$(free -m|grep 'Mem:'|awk '{print $4}')
  if test $f -eq 0
  then
    ZSH_PROMPT_SWAP_USED="N/A"
    return
  fi
  let 'p = u * 100 / f'
  ZSH_PROMPT_SWAP_USED="$u($p)"
}

add-zsh-hook precmd get_swap_used
